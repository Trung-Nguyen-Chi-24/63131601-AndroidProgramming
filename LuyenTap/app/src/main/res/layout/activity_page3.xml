<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page3Activity">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#FFDEB5"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Math is Fun!"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#8BC34A"
            android:textSize="35dp"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="265dp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="6dp"
        android:background="#F2754F"
        android:src="@drawable/homene"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="How many bears?"
        android:textColor="#8BC34A"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/gaune"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnbongau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="79dp"
        android:backgroundTint="#C8F7C5"
        android:text="4"
        android:textColor="#228B22"
        app:layout_constraintEnd_toStartOf="@+id/btnhaigau"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnhaigau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="34dp"
        android:backgroundTint="#B3E5FC"
        android:text="2"
        android:textColor="#0277BD"
        app:layout_constraintStart_toEndOf="@+id/btnbongau"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnmotgau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="78dp"
        android:backgroundTint="#F8BBD0"
        android:text="1"
        android:textColor="#B71C1C"
        app:layout_constraintEnd_toStartOf="@+id/btnsaugau"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnbongau" />

    <Button
        android:id="@+id/btnsaugau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFF9C4"
        android:text="6"
        android:textColor="#E6A800"
        app:layout_constraintStart_toEndOf="@+id/btnmotgau"
        app:layout_constraintTop_toBottomOf="@+id/btnhaigau" />


</androidx.constraintlayout.widget.ConstraintLayout>