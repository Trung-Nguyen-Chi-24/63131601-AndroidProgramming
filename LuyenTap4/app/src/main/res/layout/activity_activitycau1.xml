<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1ABAB"
    tools:context=".Activitycau1">

    <TextView
        android:id="@+id/tva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="88dp"
        android:text="Số a"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:textStyle="bold"
        android:text="Số b"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tva" />

    <EditText
        android:id="@+id/edtSo1"
        android:layout_width="226dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:hint="Nhập số thứ nhất"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/tva"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtSo2"
        android:layout_width="237dp"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nhập số thứ hai"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/tvb"
        app:layout_constraintTop_toBottomOf="@+id/edtSo1" />

    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="59dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#43502F"
        android:onClick="XuLyCong"
        android:text="Tính tổng"
        android:textColor="#03A9F4"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edtKQ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSo2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="37dp"
        android:textStyle="bold"
        android:text="Kết quả"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/edtKQ"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Kết quả"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>